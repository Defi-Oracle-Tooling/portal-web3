{
  "name": "portal-web3",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @web3-dashboard/web dev",
    "build": "pnpm --filter @web3-dashboard/web build",
    "lint": "pnpm --filter @web3-dashboard/web lint",
    "clean": "rm -rf node_modules **/node_modules"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "typescript": "^5.4.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "@types/react": "^18.2.67",
      "@types/react-dom": "^18.2.22",
      "ethers": "^6.13.5"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "ethers": "6"
      },
      "ignoreMissing": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ]
    }
  }
}